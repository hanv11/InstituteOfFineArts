@model InstituteOfFineArts.Models.Competition

@{
    ViewBag.Title = "DetailCompetition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative">
    <div class="overlay overlay-bg" style="background-color: rgba(0, 0, 0, 0.7);"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white pt-20 pb-20">
                    @Html.DisplayFor(model => model.CompetitionName)
                </h1>
                <p class="text-white link-nav">
                    
                        <span class="lnr ">@Html.DisplayNameFor(model => model.StartDate):@Html.DisplayFor(model => model.StartDate)</span>



                        <span class="lnr ">@Html.DisplayNameFor(model => model.EndDate):@Html.DisplayFor(model => model.EndDate)</span>

                </p>
            </div>
                

            </div>
        </div>
    
</section>
<!-- Start blog-posts Area -->
<section class="blog-posts-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 post-list blog-post-list">
                <div class="single-post">
                    <img class="img-fluid" style="width:700px" src="@Url.Content(@Model.Image)" alt="">
                    <a href="#">
                        <h1>
                            @Html.DisplayFor(model => model.CompetitionName)
                        </h1>
                    </a>
                    <div class="content-wrap">


                        <blockquote class="generic-blockquote">
                            <p>@Html.DisplayNameFor(model => model.StartDate): @Html.DisplayFor(model => model.StartDate)</p>
                            <p>@Html.DisplayNameFor(model => model.EndDate): @Html.DisplayFor(model => model.EndDate)</p>
                        </blockquote>

                        <p>
                            @Html.DisplayFor(model => model.Description)
                        </p>

                        <div style="text-align:center;">
                            <a href="@Url.Action("Register", "Submission", new { competitionId = Model.CompetitionId })" target="_blank" class="primary-btn text-uppercase">Click here to register</a>
                        </div>
                    </div>
                    <div class="bottom-meta">

                        <div class="social-wrap col-lg-12">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-behance"></i></a></li>
                            </ul>

                        </div>

                    </div>



                </div>
            </div>
            <div class="col-lg-4 sidebar">

                <div class="single-widget protfolio-widget">
                    <h4 class="title">Competition maker</h4>
                    <div class="col-lg-offset-4">
                        <img src="@Html.DisplayFor(model => model.Creator.Avatar, new { id = Model.CreatorId })" class="img-responsive" style=" width:100px;" alt="">
                    </div>
                    <a href="#"><h4>@Html.DisplayFor(model => model.Creator.FirstName, new { id = Model.CreatorId }) @Html.DisplayFor(model => model.Creator.LastName)</h4></a>
                    <p>
                        @Html.DisplayFor(model => model.Creator.Email, new { id = Model.CreatorId })
                    </p>
                    <p>
                        @Html.DisplayFor(model => model.Creator.PhoneNumber, new { id = Model.CreatorId })
                    </p>

                </div>

