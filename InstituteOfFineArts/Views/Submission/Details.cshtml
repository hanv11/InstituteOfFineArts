@using Microsoft.AspNet.Identity
@model InstituteOfFineArts.Models.Submission

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white pt-20 pb-20">
                    @Html.DisplayFor(model => model.Competition.CompetitionName)
                </h1>
                <p class="text-white link-nav"><a href="/Home/Index">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="/Submission/List/@Html.DisplayFor(model => model.CompetitionId)">List Submission</a><span class="lnr lnr-arrow-right"></span><a href="/Submission/Detail/@Html.DisplayFor(model => model.SubmissionId)">Detail Submission</a></p>
            </div>
        </div>
    </div>
</section>
<div style="background-color: #f3f3f3;">
    <!-- Start cat-top Area -->
    <section class="cat-top-area section-gap">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 cat-top-left">
                    <h1>
                        @Html.DisplayFor(model => model.Competition.CompetitionName)
                    </h1>
                    <h4>
                        @Html.DisplayFor(model => model.Description)
                    </h4>
                    <p>Student Name: @Html.DisplayFor(model => model.Account.FirstName) @Html.DisplayFor(model => model.Account.LastName)</p>
                    <p>Point: @Html.DisplayFor(model => model.Marks)</p>
                    <p>Award: @Html.DisplayFor(model => model.Awards)</p>
                    <p>Post Date: @Html.DisplayFor(model => model.UpdatedAt)</p>
                    <p>Description : @Html.DisplayFor(model => model.Description)</p>
                    @if (Model.AccountId == User.Identity.GetUserId())
                    {
                        <a class="genric-btn warning circle" href="@Url.Action("Edit", "Submission", new {id = Model.SubmissionId})">Update</a>
                    }

                    <a class="genric-btn success circle" href="@Url.Action("List", "Submission", new {id = Model.CompetitionId})">Back</a>
                </div>
                <div class="col-lg-6 cat-top-right">
                    <img id="myImg" class="img-responsive img-rounded" src="@Url.Content(Model.Picture)" alt="">
                </div>
                <div id="myModal" class="modal">
                    <span class="close1">&times;</span>
                    <img class="modal-content" id="img01" style="margin-top: 60px;" />
                </div>
            </div>
        </div>



    </section>
    @Html.Action("SomeSubmission", "Submission", new { Id = Model.CompetitionId })
    <!-- End cat-top Area -->
</div>

    <script type="text/javascript">
        var modal = document.getElementById("myModal");
        // Get the image and insert it inside the modal - use its "alt" text as a caption
        var img = document.getElementById("myImg");
        var modalImg = document.getElementById("img01");
        var captionText = document.getElementById("caption");
        img.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
        }

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close1")[0];

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }
    </script>
