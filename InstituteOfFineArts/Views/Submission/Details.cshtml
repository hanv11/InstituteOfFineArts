@using Microsoft.AspNet.Identity
@model InstituteOfFineArts.Models.Submission

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white pt-20 pb-20">
                    @Html.DisplayFor(model => model.Competitions.CompetitionName)
                </h1>
            </div>
        </div>
    </div>
</section>
<div class="container ">
    <div class="row submission-content">
        <div class="col-md-5">
            <img class="picture" src="@Url.Content(Model.Picture)" alt="Alternate Text" />
        </div>
        <div class="row w-60">
            <div class="col-md-6 max-w">
                @Html.DisplayNameFor(model => model.Account)
            </div>
            <div class="col-md-7">
                @Html.DisplayFor(model => model.Account.FirstName) @Html.DisplayFor(model => model.Account.LastName)
            </div>

            <div class="col-md-6 max-w">
                @Html.DisplayNameFor(model => model.Description)
            </div>

            <div class="col-md-7">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>


        <div class="col-md-3 submission-button">
            @if (Model.AccountId == User.Identity.GetUserId())
            {
                <a href="@Url.Action("Edit", "Submission", new {id = Model.SubmissionId})"><img style="width: 80px; height: 40px;" src="https://i.ibb.co/KrS2rDg/images-removebg-preview.png" /></a>
            }

            <a href="@Url.Action("List", "Submission", new {id = Model.CompetitionId})"><img style="width: 80px; height: 40px" src="https://pngimage.net/wp-content/uploads/2018/05/back-button-png-blue-1.png" /></a>

        </div>
    </div>

</div>
