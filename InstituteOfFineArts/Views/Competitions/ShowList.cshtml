@model PagedList.IPagedList<InstituteOfFineArts.Models.Competition>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h2>List Of Art Competitions </h2>
    <ol class="breadcrumb">
        <li class="active">Home</li>
    </ol> 
</section>
<section class="content">
    @using (Html.BeginForm("ShowList", "Competitions", FormMethod.Get))
    {
        <div class="container">
            <div class="row" style="margin: 20px">
                <div class="col-lg-6">
                    @Html.TextBox("SearchString", null, ViewBag.CurrentFilter as string, new { @placeholder = " Find by Name... ", @class = "form-control" })
                </div>
            </div>
        </div>
    }
    <table class="table table-hover table-responsive">

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content(item.Image)" alt="Alternate Text" /> 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetitionName)
                </td>     
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>              
            </tr>
        }


    </table>
    Page @(Model.PageCount < Model.PageNumber ? 1 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("ShowList", new { page, sortOrder = ViewBag.SortOder, currentFilter = ViewBag.CurrentFilter }))
</section>
