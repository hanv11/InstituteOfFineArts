
@model PagedList.IPagedList<InstituteOfFineArts.Models.Competition>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ShowList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">List Of Art Competitions</li>
    </ol>
</section>
<section class="content">
    <header class="entry-header">
        <h1 class="entry-title">
            List Of Art Competitions
        </h1>
    </header>
    <hr style="border-color:white" />
    @using (Html.BeginForm("ShowList", "Competitions", FormMethod.Get))
    {
        <div class="container">
            <div class="row" style="margin: 20px">
                <div class="col-lg-6">
                    @Html.TextBox("SearchString", null, ViewBag.CurrentFilter as string, new { @placeholder = " Find by Name... ", @class = "form-control" })
                </div>
            </div>
        </div>
    }

    @foreach (var item in Model)
    {
        <article id="post-6943" class="post-6943 page type-page status-publish">
            <div class="entry-content">
                    <span>
                        <img style= "width:100%; height: 300px;" class="alignnone size-full wp-image-7079" src="@Url.Content(item.Image)" width="1100" height="500" sizes="(max-width: 1200px) 100vw, 1200px">
                    </span>
                <h2><a href="#">@Html.DisplayFor(modelItem => item.CompetitionName)</a></h2>
                <p style="color: #e0357b; width:98%" >@Html.DisplayFor(modelItem => item.Description)</p>
                <ul>
                    <li>The competition is open to all ages<strong><span style="font-size: small;">. </span></strong></li>
                    <li>Whole schools and individual students are welcome to participate.</li>
                    <li>Each entrant is acknowledged with a <strong><span style="font-size: small;"> certificate of participation.</span></strong></li>
                </ul>
            </div>
            <hr style="border-color:white"/>
        </article>
    }
    Page @(Model.PageCount < Model.PageNumber ? 1 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("ShowList", new { page, sortOrder = ViewBag.SortOder, currentFilter = ViewBag.CurrentFilter }))
</section>

