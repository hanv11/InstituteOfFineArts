@model IEnumerable<InstituteOfFineArts.Areas.Teacher.Models.MarkViewModel>
@{
    ViewBag.Title = "ListMark";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ListMark</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th> <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-2">
                <img class="img-thumbnail" src="@Url.Content(@item.Image)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td><td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MarkId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MarkId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MarkId })
            </td>
        </tr>
    }

</table>