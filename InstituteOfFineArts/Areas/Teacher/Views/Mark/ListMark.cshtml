@model IEnumerable<InstituteOfFineArts.Areas.Teacher.Models.MarkViewModel>
@{
    ViewBag.Title = "ListMark";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ListMark</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th> <th>
            @Html.DisplayNameFor(model => model.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th>
            Status
        </th>  
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-2">
                <img class="img-thumbnail" src="@Url.Content(@item.Image)" alt="Alternate Text" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>

            @if (item.Mark == null)
            {
                <td>
                    <button class="btn btn-warning">Pending</button>
                </td>
                <td>
                    @Html.ActionLink("Create", "Create", new {submissionId = item.SubmissionId}, new {@class = "btn btn-info"})
                </td>
            }
            else
            {
                <td>
                    <button class="btn btn-success">Done</button>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.MarkId}, new {@class = "btn btn-info"})

                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
           
        </tr>
    }

</table>