@model InstituteOfFineArts.Models.Competition

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; padding-top: 5%">
    <div class="whole-wrap">
        <div class="container ">

            <div class="section-top-border">
                <div class="row">
                    <div class="col-md-6">

                        <img id="myImg" class="img-rounded img-responsive pad picture" style="box-shadow: 0 0 10px 4px grey, 0 0 10px 0px grey, 0px 0 0px 0px grey;" src="@Html.DisplayFor(model => model.Image)" alt="Alternate Text" />

                        <div id="myModal" class="modal">
                            <span class="close1">&times;</span>
                            <img class="modal-content" id="img01" style="margin-top: -60px;" />
                        </div>
                    </div>
                    <div class="col-md-4 mt-sm-20">
                        <h2 class="text-white pt-20 pb-20" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">
                            @Html.DisplayNameFor(model => model.CompetitionName)
                        </h2>
                        <h5 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="mb-4">Start Date: @Html.DisplayFor(model => model.StartDate)</h5>

                        <h5 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="mb-4">End Date : @Html.DisplayFor(model => model.EndDate)</h5>
                        <h5 style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif" class="mb-4">Decription: @Html.DisplayFor(model => model.Description)</h5>
                    </div>
                </div>
                <div class="col-md-6 mt-4">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.CompetitionId }, new { @class = "btn btn-warning" })
                    <a href="@Url.Action("Index", "Competition")" class="btn btn-default" style="margin-left:1%">Back to List</a>
                </div>
            </div>
        </div>
    </div>

</div>