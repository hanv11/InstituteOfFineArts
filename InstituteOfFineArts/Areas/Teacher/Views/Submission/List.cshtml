@model PagedList.IPagedList<InstituteOfFineArts.Models.Submission>
@using InstituteOfFineArts.Models
@using PagedList.Mvc;
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    @Html.DisplayFor(model => model.First().Competition.CompetitionName)
                </div>
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <tr>
                            <th>
                                Art
                            </th>
                            <th>
                                Author
                            </th>
                            <th>
                                Decription
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    <a href="@Url.Action("Mark", "Submission", new {id = item.SubmissionId})" class="d-block mb-4"><img class="img-responsive pad" src="@item.Picture" alt=""></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Account.FirstName) @Html.DisplayFor(model => item.Account.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Description)
                                </td>
                                <td><a href="@Url.Action("Create", "Mark", new {id = item.SubmissionId})" class="btn btn-primary btn-lg">Mark</a></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
