@model PagedList.IPagedList<InstituteOfFineArts.Models.Competition>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="example2" class="table table-bordered table-hover">
    <tr>
        <th>
