            Competition Name
        </th>
        <th>
            Created By
        </th>
        <th>
           Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
           Image
        </th>
        @* <th> *@
        @*     @Html.DisplayNameFor(model => model.Description) *@
        @* </th> *@
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@(item.CompetitionId)</td>
        <td>
            @Html.DisplayFor(modelItem => item.CompetitionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Account.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @* @Html.DisplayFor(modelItem => item.Image) *@
            <img src="@item.Image" alt="Alternate Text" class="thumbnail-img"/>
        </td>
        @* <td> *@
        @*     @Html.DisplayFor(modelItem => item.Description) *@
        @* </td> *@
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id = item.CompetitionId}) |
            @Html.ActionLink("Details", "Details", new {id = item.CompetitionId}) |
            @Html.ActionLink("Delete", "Delete", new {id = item.CompetitionId})
        </td>
    </tr>
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 1 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.SortOder, currentFilter = ViewBag.CurrentFilter }))